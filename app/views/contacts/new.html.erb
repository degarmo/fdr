<% provide(:title, "Send FDR A Message") %>
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1>Contact FDR</h1>
            </div>
        </div>
    </div>
</div>
<hr>


    <div id="content">
            <div class="container" id="contact">

                <div class="row">
                    <div class="col-md-8">

                        <section>

                            <div class="heading">
                                <h2>We are here to help you</h2>
                            </div>

                            <p class="lead">We're looking to create a world that allows each citizen live in peace</p>
                            <p>Please feel free to contact us, our customer service center is working for you 24/7.</p>

                            <div class="heading">
                                <h3>Contact form</h3>
                            </div>

                            <form>
                                <div class="row">
                                  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="firstname">Firstname</label>
                                            <%= f.input :name, :required => true, :class => "form-control" %>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <%= f.input :email, :required => true, :class => "form-control" %>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="message">Message</label>
                                            <%= f.input :message, :as => :text, :required => true, :class => "text-hght form-control" %>
                                              <div class= "hidden">
                                                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                                              </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 text-center">
                                        <section><i class=""><%= f.button :submit, 'Send message', :class=> "btn btn-template-main" %></section> 
                                        <% end %>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </form>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d41517.00031774483!2d-78.89376490562782!3d35.06900245076819!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ab134f42924a23%3A0xa3ab9e7512763b9b!2sFayetteville%2C+NC!5e0!3m2!1sen!2sus!4v1485310833531" width="800" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

                        </section>

                    </div>

                    <div class="col-md-4">

                        <section>

                            <h3 class="text-uppercase">Address</h3>

                            <p>FDR Inc
                                <br>2935 Breezewood Ave.
                                <br>Suite 101
                                <br>Fayetteville, NC 28303
                                <br>
                                <strong>United States of America</strong>
                            </p>

                            <h3 class="text-uppercase">Call </h3>

                            
                            <p><strong>(910)868-9996</strong>
                            </p>

                     
                        </section>

                    </div>

                </div>
                <!-- /.row -->


            </div>
        </div>  <!-- /#contact.container -->
     </div>
<section class="bar no-mb color-white">
  <div class="container">
      <div class="row">
        <div class="col-md-12">
              
            </div>
        </div>
    </div>
</section>
</div>