<% provide(:title, "Job Title: #{@job.title} // Job ID:  #{@job.id}") %>
    
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1><%= "Job: #{@job.title}" %></h1>
            </div>
        </div>
    </div>
</div>
<hr>

<div id="content">
	<div class="container">
		<div class="row">
			<br>
			<div class="col-md-2"></div>
			
			<div class="col-md-8">
				<div class="col-md-8">
					<div class="page-header">
						<h1><%= @job.title %> <small><%= @job.location %></small></h1>
						
					</div>
				</div>	
				<div class="col-md-4">
					<div class="text-center">
						<br>
						<h3>$<%= @job.pay %></h3>
						<h4>ID: <%= @job.id %></h4>
						
					</div>
				</div>
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<div>
						<%= @job.description %>
					</div>
					<br>			
					<% if current_user %>
		              <%= link_to "Edit Job", edit_job_path, :class => "btn btn-info" %> |
		              <%= link_to "Archive Job", job_archive_path(@job), method: :post, :class => "btn btn-warning" %>
		            <% else %>
		            	<br>
		              <%= link_to "Apply", "#", :class => "btn btn-primary" %>
		              <br>
		            <% end %>
					<br>
				</div>
				<div class="col-md-1"></div>
			</div>
			
			<div class="col-md-2"></div>
		</div>
	</div>
		<hr>
		<br>
	    <section class="bar no-mb color-white">
        	<div class="container">
          		<div class="row">
            		<div class="col-md-12">
                    	
                    </div>
                </div>
            </div>
        </section>
    </div>



		